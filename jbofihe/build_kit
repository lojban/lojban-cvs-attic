#!/usr/local/bin/perl

@files = <*>;
open(COPY, "<COPYRIGHT");
@copy=<COPY>;
close(COPY);
for $f (@files) {
    print "doing $f\n";
    rename "$f","$f.tmp";
    open (IN, "<$f.tmp");
    open (OUT, ">$f");
    while (<IN>) {
	if (m,\/\* COPYRIGHT \*\/,) {
	    print OUT "/**********************************************************************\n";
	    for (@copy) {
		print OUT " * ".$_;
	    }
	    print OUT " *********************************************************************/\n";
	} elsif (m,\# COPYRIGHT,) {
	    print OUT "#\n";
	    for (@copy) {
		print OUT "# ".$_;
	    }
	    print OUT "#\n";
	} else {
	    print OUT;
	}
    }
    close(IN);
    close(OUT);
    unlink "$f.tmp";
}
groff -Tascii -man cmafihe.1 | perl -pe 's/.\x8//g;' > cmafihe.txt
groff -Tascii -man jbofihe.1 | perl -pe 's/.\x8//g;' > jbofihe.txt
groff -Tascii -man jvocuhadju.1 | perl -pe 's/.\x8//g;' > jvocuhadju.txt
groff -Tascii -man smujajgau.1 | perl -pe 's/.\x8//g;' > smujajgau.txt
unlink 'COPYRIGHT'; # This is included into everything else
unlink 'build_kit'; # Private
